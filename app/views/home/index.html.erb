<ul>
  <% if user_signed_in? %>
<%= link_to 'Agregar Pin', new_pine_path,:class => 'btn btn-success' %>

    <br>


    <p id="notice"><%= notice %></p>
    <div class="g g--masonry-2-to3-up">

      <% @pines.each do |pine| %>
      <div class="g__item">
        <div class="block">
          <button type="button" class="btn btn-secondary">
            <span class="glyphicon glyphicon-thumbs-up"><i class="far fa-thumbs-up"></i></span> Like
          </button>
          <%= image_tag(pine.foto, class:'block__img') %>
          <h3 class="block__title"><%= pine.nombre %></h3>
          <h5 class="block__title"><%= pine.descripcin %></h5>
          <i class="fas fa-heart fa-lg"><%= pine.likes %></i>
          <td><%= link_to 'Ver', pine , :style => " margin-left:10px;"%></td>
          <td><%= link_to 'Editar', edit_pine_path(pine) %></td>
          <td><%= link_to 'Eliminar', pine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div><!--end block-->
      </div><!--end g__item-->
      <% end %>
    </div><!--end g-->


  <%end %>
</ul>
